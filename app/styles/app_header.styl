.app-header 
  color: $gray-light;
  font-size: 12px;

  .main 
    background: $gray-dark;
    position: relative;
    z-index: 999;
    box-sizing: border-box;

    .container 
      display: table;

  .group 
    display: table-cell;
    text-align: center;
    vertical-align: middle;
    line-height: 50px;
    width: 33%;

    &:first-child 
      text-align: left;
    
    &:last-child 
      text-align: right;
    
    .switch 
      display: inline-block
      cursor: pointer

      h4 
        border: none
        margin: 0
        line-height: 10px

      ul.dropdown 
        display: none
        position: absolute
        width: 150px
        background: $gray-dark
        zindex: 999
        padding-left: 0
        border: 1px solid $gray-light
        border-top: none
        line-height: 0
        list-style-type: none
        top: 42px

        li 
          border-bottom: 1px solid $gray-light
          padding: 15px
          

          &:last-child 
            border-bottom: none
      
        &.active
          display: block

  button 
    @extends #bold-button

  button.fork-dashboard 
    display: none

  h1 
    display: inline-block;
    font-size: 18px;
    font-weight: normal;
    line-height: 1;
    margin: 0;

    img 
      margin-top: -5px;
      vertical-align: middle;

  nav 
    display: inline-block;
    vertical-align: bottom;

    > ul 
      margin: 0;
      padding: 0;

      > li 
        display: inline-block;
        list-style: none;
        position:relative;

        > a,
        > .button 
          border-bottom: 3px solid transparent;
          box-sizing: border-box;
          color: inherit;
          cursor: pointer;
          display: block;
          font-size: 0.9em;
          font-weight: 700;
          height: 100%;
          margin: 0 5px;
          text-shadow: 0 1px 2px rgba($black, 0.67)

          &:hover,
          &.active 
            color: $blue;
            text-decoration: none;
          

          &.active 
            border-bottom-color: $blue;

        .dropdown 
          background: $black;
          position: absolute;
          line-height: 1.4;
          top: 100%;
          white-space: nowrap;
          padding: 0 10px;
          z-index: 1;

          &.right 
            right: 0;
          

          &.left 
            left: 0;
          

          &.search 
            width: 200px;

            .action 
              text-align: center;

              button 
                @extends #bold-button;

  a.return 
    @extends #bold-button;
