@import "common"

#dashboard-header
  position: fixed;
  z-index: 20;
  top: 0;
  left: 0;
  color: $panelWhite;
  background: $mainBlack;
  width: 100%;
  border-bottom: 1px solid $standardGray; 
  height: 40px;
  text-align: center;
  padding: 10px 0;
  box-sizing: border-box;

  span.menu
    cursor: pointe
    width: 45px;
    position: absolute;
    height: 40px; 
    border-right: 1px solid $hoverGray;
    left: 0;
    top: 0;

    &#tool-menu
      left: 45px;

      img
        margin: 8px

    &.active:hover
      background: $hoverBlue; 

    &:after
      border-left: 1px solid $mainBlack;

    &:hover
      background: $hoverGray;

    &.active
      background: $standardBlue; 

    &#menu
      &:before
        background: none repeat scroll 0 0 $panelWhite;
        box-shadow: 0 4px $mainBlack, 0 8px $panelWhite, 0 12px $mainBlack, 0 16px $panelWhite;
        content: "";
        height: 4px;
        position: absolute;
        left: 10px;
        top: 10px;
        width: 25px;

      &.active:before 
        box-shadow: 0 4px $standardBlue, 0 8px $panelWhite, 0 12px $standardBlue, 0 16px $panelWhite;

      &.active:hover:before
        box-shadow: 0 4px $hoverBlue, 0 8px $panelWhite, 0 12px $hoverBlue, 0 16px $panelWhite;

      &:hover:before
        box-shadow: 0 4px $hoverGray, 0 8px $panelWhite, 0 12px $hoverGray, 0 16px $panelWhite;

  span.down-arrow
    display: inline-block
    cursor: pointer
    transform-origin: 50% 50%
    text-align: left
    transition: transform 0.5s ease-in-out

    &.active
      transform: rotate(180deg);

  ul#project-select
    width: 200px;
    position: absolute;
    background: $mainBlack;
    z-index: -1;
    padding-left: 5px;
    padding-right: 5px;
    line-height: 0;
    list-style-type: none;
    font-weight: 400;
    box-sizing: border-box
    top: -130px;
    transition: transform 0.5s ease-in-out;

    &.active
      transform: translateY(152px);

    li
      border-top: 1px solid white;
      padding: 15px 15px 10px;

    li a
      color: white;
      text-decoration: none;

  #current-project
    font-size: 18px
    font-weight: 300
    position: absolute;
    margin-left: 5px;
    top: 0
    background: $mainBlack
    padding-top: 10px
    padding-bottom: 4px
    width: 220px
    text-align: left

  #zoo-tools-title
    font-size: 18px
    font-weight: 300
    background: $mainBlack;
    padding-top: 10px
    padding-bottom: 4px
