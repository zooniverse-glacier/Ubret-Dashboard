
.spacewarp-viewer-settings
  font-size 13px
  
  .bands
    position relative
    
    input[type='radio']
      display none
      &:checked + label
        background: hsl(0, 0, 45%);
        box-shadow: 0 1px 1px rgba($black, 0.45) inset, 0 1px 1px rgba($white, 0.30);
        
    label
      @extends #choice-button
      padding 4px 8px
      display inline-block
      cursor pointer
    
    span
      color red
      cursor pointer
      
  .parameters
    .subtitle
      position relative
      
      p
        font-size 12px
        text-shadow 0 1px 0 $gray
        font-weight 200
        
    .stretchfn
      margin-bottom 20px
      
      input[type='radio']
        display none
        &:checked + label
          background: hsl(0, 0, 45%);
          box-shadow: 0 1px 1px rgba($black, 0.45) inset, 0 1px 1px rgba($white, 0.30);
          
      label
        @extends #choice-button
        padding 4px 8px
        display inline-block
        font-size 11px
        text-transform lowercase
        cursor pointer
        
    input[type='range']
      clear both
      width 60%
      margin-bottom 10px
      background: none
      border: none
      box-sizing: border-box
      margin-left: 0
      padding-left: 0
      display: inline-block
      
  .color
    display block
    
  .parameter
    width 30%
    box-sizing: border-box
    display: inline-block
    position: relative
    top: -15px
    text-align: right
    font-weight: 400
    font-size: 10px

select.stretch
  appearance none
  background $black url(../images/select-arrow.png) no-repeat right center
  border 0
  border-radius 0
  box-sizing border-box
  color $white
  font-weight 700
  margin 0
  padding 5px 10px
  width 100%