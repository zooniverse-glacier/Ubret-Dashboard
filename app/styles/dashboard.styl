@import "common"

section#dashboard 
  width: 200%

  ul#zoom-controls
    list-style: none;
    right: 0;
    top: 50%;
    margin-top: -75px;
    position: fixed;
    z-index: 1000

    .btn
      width: 50px;
      height: 50px;
      background: $mainBlack;

    li
      border-bottom: 1px solid #ededed;

    li:last-child
      border-bottom: none;

    .btn:hover
      background: $standardGray;

    .btn:active
      background: $focusRed;

  .row
    display: block
    padding: 20px 0;
    border-bottom: 1px solid $standardGray
    overflow: hidden;
    position: relative

    .scroll
      position: absolute 
      top: 20px
      height: inherit
      width: 30px
      z-index: 999
      background: $standardGray
      opacity: 0

      &.active
        opacity: .5

      &.pull-right
        float: left
        left: 50%
        margin-left: -30px
