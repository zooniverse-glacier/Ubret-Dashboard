.login
  background: linear-gradient(top, $blue, darken($blue, 33%))
  border-bottom: 1px solid $gray-dark
  border-top: 1px solid $black
  color: $white
  padding: 5px 5%
  text-align: center
  text-shadow: 0 1px 0 $black
  height: 24px

  &.logged-in
    background: $gray-light
    color: darken($gray-light, 30%)
    border: none
    text-align: right
    text-shadow: none

    a.signout
      color: darken($gray-light, 30%)

      &:hover
        color: $black

  header
    display: inline-block
    font-weight: bold
    height: 24px

  form
    display: inline-block
    margin: 0 10px

  input
    background: $white
    border: 1px solid $gray-dark
    box-shadow: 0 1px rgba($white, 0.33)
    margin: 0 3px
    padding: 3px
    width: 120px

  button
    @extends #bold-button
    background: linear-gradient(top, $gray-less-dark, darken($gray-less-dark, 33%))
    
  a.forgot
    color: $white
    font-size: 10px
    font-weight: bold

  .error
    background: $gray-dark
    border-radius: 15px
    box-shadow: 0 3px 5px -3px $black
    left: 50%
    margin: 5px 0 0 -300px
    padding: 3px 0
    position: absolute
    width: 600px
