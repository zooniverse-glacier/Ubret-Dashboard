@import "common"

.window
  display: inline-block;
  margin: 0 20px;
  border: 1px solid $standardGray;
  padding: 20px;
  background: $panelWhite;
  overflow: hidden;

  .title-bar
    background: $mainBlack
    color: $panelWhite;
    position: relative;
    top: -20px;
    left: -20px;
    height: 20px;
    padding: 5px 20px;
    width: 100%;
    text-align: center;
    cursor: pointer

    .close
      float: left;

    .settings-toggle
      transform: rotate(180deg)
      transition: all 0.4s cubic-bezier(0.0, 0.0, 0.35, 1.0)
      top: 4px
      width: 20px
      float: right

  &.new-tool-chain
    background: $standardGray;
    color: $panelWhite;
    text-align: center;
    cursor: pointer;

    &:hover
      background: $hoverGray;

  &.selected
    box-shadow: 5px 5px $hoverBlue
