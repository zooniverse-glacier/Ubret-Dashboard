@import "common"

.window
  display: inline-block;
  margin: 0 20px;
  border: 1px solid $standardGray;
  padding: 20px;
  background: $panelWhite;
  overflow: hidden;

  .container 
    position: absolute
    height: inherit
    width: inherit

  .drag-target
    position: absolute; 
    opacity: .3;
    text-align: center;
    z-index: 99;
    width: 150px;
    padding: 10px 0;
    display: none;

    &.add-to-chain
      background: green;
      right: -75px;
      transform: rotate(-90deg);

    &.add-new-chain
      background: red;
      bottom: -20px;
      left: 50%;
      margin-left: -75px

  .tool-pane
    overflow: auto;

  .title-bar
    background: $mainBlack
    color: $panelWhite;
    position: relative;
    top: -20px;
    left: -20px;
    height: 20px;
    padding: 5px 20px;
    width: 100%;
    text-align: center;
    cursor: pointer
    z-index: 100;

    .close
      float: left;

    .settings-toggle
      transform: rotate(180deg)
      transition: all 0.4s cubic-bezier(0.0, 0.0, 0.35, 1.0)
      top: 4px
      width: 20px
      float: right

  &.new-tool-chain
    background: $standardGray;
    color: $panelWhite;
    text-align: center;
    cursor: pointer;

    &:hover
      background: $hoverGray;

  &.selected
    box-shadow: 5px 5px $hoverBlue
