@import "common"

.dashboard-welcome-view

  h1 
    font-size: 60px;
    margin: 0;
    
  h2 
    font-size: 16px;
    margin: 0;

  p 
    font-size: 20px;
    margin: 0;

  .light 
    font-weight: 300;

  select, input 
    border: 3px solid $panelWhite;
    background: inherit;
    color: $panelWhite;
    font-size: 16px; 

  .exit 
    position: absolute;
    top: -100px;
    left: -85px;

  a 
    color: white;
    font-size: 10px;
    font-style: italic;

    &:hover 
      color: $focusRed 

  ul 
    list-style: none;
    padding: 0;
    width: 100%;

    li a 
      width: 100%;
      display: inline-block;
      text-decoration: none;
      font-size: 16px;
      font-style: normal;
      margin: 5px 0;

    .date 
      float: right;
      font-style: italic;

  .half 
    display: block;
    width: 46%;
    padding: 2%;
    text-align: left;

  .no-project
    margin-left: 20px
